<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<header>
  <h1>Sign up </h1>
  <h2><%= render "users/shared/error_messages", resource: resource %><h2>
</header>

<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>
  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>

<div class="card">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card2">
<table>
<tr>
  <div class="field">
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
  </div>
</tr>
  
<tr>
  <div class="field">
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
</tr>
<tr>
  <div class="field" >
    <td><%= f.label :age%></td>
    <td><%= f.number_field :age%></td>
  </div>
</tr>
  
<tr>
  <div class="field" >
    <td><%= f.label :phone%></td>
    <td><%= f.text_field :phone%></td>
  </div>
</tr>
  
<tr>  
  <div class="field" >
    <td><%= f.label :picture%></td>
    <td><%= f.url_field :picture%></td>
  </div>
</tr>
  
<tr>
  <div class="field" >
    <td><%= f.label :id_comuna%></td>
    <td><%= f.number_field :id_comuna%></td>
  </div>
</tr>
  
<tr>
  <div class="field" >
    <td><%= f.label :service_enable%></td>
    <td><%= f.check_box :service_enable, {}, true, false %></td>
  </div>
</tr>
  
<tr>

  <div class="field">
  <td><%= f.label :password %></td>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </div>
</tr>
  
<tr>
  <div class="field">
  <td><%= f.label :password_confirmation %><br /></td>
  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>
</tr>
  

  
  </table>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <br/>
<% end %>
</div>

<div class="card2">
<%= render "users/shared/links" %>  
</div>
</div>


