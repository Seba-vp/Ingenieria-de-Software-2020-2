<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>

<header>
<h1>Todos los posts</h1>
</header>

<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>


<div class="lista">
<div class="card">
<table>
    <thead>
        <tr>
            <th> Id </th>
            <th> Titulo </th>


        </tr>   
    </thead>

    <tbody>

        <% @posts.each do |post| %>
            <tr>
            <td> <%=post.id %></td>
            <td> <%=post.title %></td>
            <td> <%= link_to "Ver mas", post_path(post.id) %></td>
    

            </tr>
        <% end %>


    </tbody>
</table>
</div>

<div class="card">
<p> <%= link_to "Agregar un post", posts_new_path%> </p>
<p> <%= link_to "Volver a inicio", home_path %> </p>
</div>
</div>





</body>
</html>

