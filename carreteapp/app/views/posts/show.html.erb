<p id="notice"> <%= notice %></p>

<header>
<h1> Post <%=@post.title %> </h1>
</header>

<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>

<div class="lista">
<%= image_tag(@post.picture, alt: "like", class: "like_image_for_index") %>

<div class="card">
<table>

    <tbody>
        <tr>
        <td> <strong> Id: </strong></td>
        <td> <%= @post.id %></td>
        </tr>
        <tr>
        <td> <strong> Titulo: </strong></td>
        <td> <%= @post.title %></td>
        </tr>
        
        
        <tr>
        <td> <strong> Contenido: </strong></td>
        <td> <%=@post.content %></td>
        </tr>                      
       
    </tbody>
</table>
</div>

<div class="card">


<p> <%= link_to "Editar post", post_edit_path%> </p>
<p> <%= link_to "Eliminar post", post_path, method: :delete%> </p>


<p> <%= link_to "Volver al listado", posts_index_path%> </p>


</div>
</div>



</body>
</html>






