
<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>



<header>
<h1>Editar post  </h1>
</header>


<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>

<div class="lista">

<div class="card">
<h4><%= notice%> </h4>
</div>

<%= form_with(model: @post , method: :patch, url: post_update_path(@post.id) ) do |form| %>
    <div class="card">
    <div class="field" >
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>

    <div class="field" >
        <%= form.label :content%>
        <%= form.text_field :content%>
    </div>

    <div class="field" >
        <%= form.label :picture%>
        <%= form.url_field :picture%>
    </div>

    <div class="action" >
        <%= form.submit %>
    </div>
    </div>

<% end %>
<div class="card">
<p> <%= link_to "Volver al post", post_path(@post.id)%> </p>
</div>
</div>



</body>
</html>



