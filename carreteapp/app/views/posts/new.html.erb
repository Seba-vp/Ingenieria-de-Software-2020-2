<h1>Nuevo Post </h1>

<h4><%= notice%> </h4>

<%= form_with(model: @post , method: :post) do |form| %>

    <div class="field" >
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>

    <div class="field" >
        <%= form.label :content%>
        <%= form.text_area :content%>
    </div>

    <div class="field" >
        <%= form.label :picture%>
        <%= form.url_field :picture%>
    </div>

    
    <div class="action" >
        <%= form.submit %>

    </div>

<% end %>

<p> <%= link_to "Volver al listado", posts_index_path%> </p>