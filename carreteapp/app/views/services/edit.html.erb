<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>



<div class="header">
<h1>Editar servicio  </h1>
</div>


<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a href= <%=  service_path(@service.id)%> style="float:right"> Volver</a>
</div>

<div class="lista">

<div class="card">
<h4><%= notice%> </h4>
</div>

<%= form_with(model: @service , method: :patch, url: service_update_path(@service.id) ) do |form| %>
    <div class="card">
    <div class="field" >
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field" >
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <div class="field" >
        <%= form.label :max_cap %>
        <%= form.number_field :max_cap %>
    </div>

    <div class="field" >
        <%= form.label :picture %>
        <%= form.url_field :picture%>
    </div>

    <div class="field" >
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <div class="field" >
        <%= form.label :stars %>
        <%= form.number_field :stars %>
    </div>
        
    <div class="action" >
        <%= form.submit %>

    </div>
    </div>

<% end %>


<div class="card">
<p> <%= link_to "Volver al perfil de servicio", service_path(@service.id)%> </p>
</div>
</div>


<div class="footer">
    <p>Made with &#10084;&#65039; by Sebastian Villablanca  & Javier Zagal.</p>
  </div>
</body>
</html>