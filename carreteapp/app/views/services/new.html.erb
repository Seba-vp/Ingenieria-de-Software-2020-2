

<h4><%= notice%> </h4>

<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>



<header>
<h1>Nuevo Servicio </h1>

</header>


<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>

<div class="lista">

<div class="card">
<h4><%= notice%> </h4>
</div>

<div class="card">

<%= form_with(model: @service , method: :post) do |form| %>

    <div class="field" >
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field" >
        <%= form.label :Comuna %>
        <%= form.collection_select :id_comuna, Comuna.order(:name),:id,:name, include_blank: false%>
    </div>

    <div class="field" >
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <div class="field" >
        <%= form.label :max_cap%>
        <%= form.number_field :max_cap%>
    </div>

    <div class="field" >
        <%= form.label :picture%>
        <%= form.url_field :picture%>
    </div>

    <div class="field" >
        <%= form.label :price%>
        <%= form.number_field :price%>
    </div>

    <% if current_admin %>
    <div class="field" >
        <%= form.label :stars%>
        <%= form.number_field :stars%>
    </div>
    <% end %>
        
    <div class="action" >
        <%= form.submit %>

    </div>

<% end %>
</div>

<div class="card">

<p> <%= link_to "Volver al listado", services_index_path%> </p>
</div>
</div>



</body>
</html>