

<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>



<header>
<h1>Nuevo Carrete </h1>

</header>


<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a id="r" <%= link_to "Volver", :back %>>  </a>
</div>

<div class="lista">

<div class="card">

</div>

<div class="card">
<%= form_with(model: @party , method: :post) do |form| %>

    <div class="field" >
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>
    <div class="field" >
        <%= form.label :description%>
        <%= form.text_area :decription%>
    </div>
    <div class="field" >
        <%= form.label :address%>
        <%= form.text_field :address%>
    </div>
    <div class="field" >
        <%= form.label :picture%>
        <%= form.url_field :picture%>
    </div>
    <div class="field" >
        <%= form.label :id_comuna%>
        <%= form.number_field :id_comuna%>
    </div>
    <div class="field" >
        <%= form.label :base_cost%>
        <%= form.number_field :base_cost%>
    </div>
    <div class="field" >
        <%= form.label :total_cost%>
        <%= form.number_field :total_cost%>
    </div>
    <div class="field" >
        <%= form.label :max_cap%>
        <%= form.number_field :max_cap%>
    </div>
    <div class="field" >
        <%= form.label :date%>
        <%= form.datetime_field :date%>
    </div>
    <div class="field" >
        <%= form.label :date_final%>
        <%= form.datetime_field :date_final%>
    </div>         
    <div class="action" >
        <%= form.submit %>

    </div>

<% end %>
</div>

<div class="card">
<p> <%= link_to "Todos los carretes", parties_index_path%> </p>
</div>
</div>



</body>
</html>


