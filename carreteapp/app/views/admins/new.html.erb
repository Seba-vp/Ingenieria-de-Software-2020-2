<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>



<header>
<h1>Nuevo Admin </h1>


</header>


<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a href= <%=  admins_index_path%> style="float:right"> Volver</a>
</div>

<div class="lista">

<div class="card">
<h4><%= notice%> </h4>
</div>
<div class="card">
<%= form_with(model: @admin , method: :post) do |form| %>

    <div class="field" >
        <%= form.label :name%>
        <%= form.text_field :name%>
    </div>
    <div class="field" >
