
<html>
<head>
<%= stylesheet_link_tag "application" %>
</head>

<body>

<header>
<h1>Todas las comunas</h1>
</header>

<div class="topnav">
  <a href= <%= home_path %> >Inicio</a>

  <a href= <%= home_path %> style="float:right"> Volver</a>
</div>


<div class="lista">
<div class="card">

<table>
    <thead>
        <tr>
            <th> Id </th>
            <th> Nombre </th>

            <th colspan="2"> Acciones </th>

        </tr>   
    </thead>

    <tbody>

        <% @comunas.each do |comuna| %>
            <tr>
            <td> <%=comuna.id %></td>
            <td> <%=comuna.name %></td>
            <td> <%= link_to "Ver mas", comuna_path(comuna.id) %></td>
    

            </tr>
        <% end %>


    </tbody>
</table>
</div>

<div class="card">

<p> <%= link_to "Agregar una comuna", comunas_new_path%> </p>
<p> <%= link_to "Volver a inicio", home_path %> </p>
</div>
</div>



