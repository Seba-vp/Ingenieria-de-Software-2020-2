<h1>Editar comuna  </h1>

<h4><%= notice%> </h4>

<%= form_with(model: @comuna , method: :patch, url: comuna_update_path(@comuna.id) ) do |form| %>

    <div class="field" >
        <%= form.label :name%>
        <%= form.text_field :name%>
    </div>


    <div class="action" >
        <%= form.submit %>

    </div>

<% end %>


